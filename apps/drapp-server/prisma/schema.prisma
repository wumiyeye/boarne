datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Mentee {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  pairings  Pairing[]
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Pairing {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  mentee    Mentee?   @relation(fields: [menteeId], references: [id])
  menteeId  String?
  mentor    Mentor?   @relation(fields: [mentorId], references: [id])
  mentorId  String?
  pairedAt  DateTime?
  updatedAt DateTime  @updatedAt
}

model Mentor {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  pairings  Pairing[]
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  ageGroup    Int?
  createdAt   DateTime        @default(now())
  email       String?         @unique
  firstName   String?
  gender      EnumUserGender?
  gpsLocation String?
  id          String          @id @default(cuid())
  language    String?
  lastName    String?
  mentees     Mentee[]
  mentors     Mentor[]
  password    String
  roles       Json
  updatedAt   DateTime        @updatedAt
  username    String          @unique
}

enum EnumUserGender {
  Option1
}
